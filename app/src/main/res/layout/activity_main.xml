<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2E3757"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#2e3757">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Weather"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/weather" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp">
            <TextView
                android:id="@+id/temprature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0°"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="25dp"
                android:textColor="@color/white"/>
        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Satara"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sunny"
            android:visibility="gone"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#384366"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/windFlow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78"
                        android:textSize="27dp"
                        android:textColor="#93C3F9"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:src="@drawable/wind"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind flow"
                        android:textSize="16dp"
                        android:textColor="#D9DEF4"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1A213A"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52"
                        android:textSize="27dp"
                        android:textColor="#93C3F9"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:src="@drawable/pressure"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:textSize="16dp"
                        android:textColor="#D9DEF4"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1A213A"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="89"
                        android:textSize="27dp"
                        android:textColor="#93C3F9"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:src="@drawable/humidity"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textSize="16dp"
                        android:textColor="#D9DEF4"/>
                </LinearLayout>



            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#384366"
                app:cardCornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView2" >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <LinearLayout
                      android:layout_width="89dp"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <TextView
                          android:id="@+id/max_temp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="90°c"
                          android:textColor="#93C3F9"
                          android:layout_gravity="center_horizontal"/>
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="30dp"
                          android:src="@drawable/hot_temprature"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Max-Temp"
                          android:textColor="#D9DEF4"/>

                  </LinearLayout>
                  <View
                      android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="#1A213A"/>
                  <LinearLayout
                      android:layout_width="90dp"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <TextView
                          android:id="@+id/min_temp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="70°c"

                          android:textColor="#93C3F9"
                          android:layout_gravity="center_horizontal"/>
                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="30dp"
                          android:src="@drawable/min_temprature"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Min-Temp"
                          android:textColor="#D9DEF4"/>

                  </LinearLayout>
                  <View
                      android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="#1A213A"/>
                  <LinearLayout
                      android:layout_width="90dp"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <TextView
                          android:id="@+id/sun_rise"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="9:50 am"

                          android:textColor="#93C3F9"
                          android:layout_gravity="center_horizontal"/>
                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="30dp"
                          android:src="@drawable/sun_rise"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Sun Rise"
                          android:textColor="#D9DEF4"/>

                  </LinearLayout>
                  <View
                      android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="#1A213A"/>
                  <LinearLayout
                      android:layout_width="90dp"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">
                      <TextView
                          android:id="@+id/sun_set"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="6:20 pm"
                          android:textColor="#93C3F9"
                          android:layout_gravity="center_horizontal"/>
                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="30dp"
                          android:src="@drawable/sun_set"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Sun Set"
                          android:textColor="#D9DEF4"/>
                  </LinearLayout>
              </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/changeLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="change Location"
                android:textColor="#2E3757"
                android:backgroundTint="#93C3F9"/>
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#93C3F9"
                android:text="Made by @ShreyashAnpat"/>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="BANNER"
                android:visibility="gone"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111">


            </com.google.android.gms.ads.AdView>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>